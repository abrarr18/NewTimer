<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/controlfragment"
        android:name="com.example.newtimer.ControlFragment"
        android:layout_width="348dp"
        android:layout_height="411dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_control" />

    <fragment
        android:id="@+id/lapfragment"
        android:name="com.example.newtimer.Lap"
        android:layout_width="366dp"
        android:layout_height="370dp"
        android:layout_marginStart="321dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/controlfragment"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_lap" />

</androidx.constraintlayout.widget.ConstraintLayout>